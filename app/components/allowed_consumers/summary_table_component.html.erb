<%= render AllowedConsumers::SummaryCardComponent.new(organization: @organization) %>
<table class="table table-striped mb-3">
  <thead>
    <tr>
      <th colspan="2"><%= t('allowed_consumers.summary_table_component.table_heading.organization') %></th>
      <th class="text-end"><%= t('allowed_consumers.summary_table_component.table_heading.access', org_name: @organization.name) %></th>
      <th><%= t('allowed_consumers.summary_table_component.table_heading.reason') %></th>
      <th class="text-end"><%= @organization.name %> can harvest?</th>
      <th><%= t('allowed_consumers.summary_table_component.table_heading.reason') %></th>
    </tr>
  </thead>
  <tbody>
    <% @other_organizations.each do |other_org| %>
      <tr>
        <td class="align-middle text-center icon-column">
          <% if other_org.icon.attached? %>
            <%= image_tag(other_org.icon, alt: '', class: 'icon-sm') %>
          <% end %>
        </td>
        <td class="align-middle"><%= link_to other_org.name, organization_path(other_org) %></td>
        <%= render AllowedConsumers::SummaryTableDataComponent.new(organization: @organization, other_org: other_org) %>
        <%= render AllowedConsumers::AccessTableDataComponent.new(organization: @organization, other_org: other_org) %>
      </tr>
    <% end %>
  </tbody>
</table>
