<% content_for :org_header_section_link do %>
    <%= link_to t('uploads.provider_home'), organization_path(@organization), class: 'align-self-center' if @organization.provider? %>
<% end %>

<%= render 'shared/organization_header' %>

<div class="container">
  <h1>Uploads</h1>

  <table class="mt-4">
    <thead>
      <tr>
        <th>Name</th>
        <th>Files</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @uploads.each do |upload| %>
        <tr>
          <td><%= upload.name %></td>
          <td><%= upload.files %></td>
          <td><%= link_to 'Show', [@organization, upload] %></td>
          <td><%= link_to 'Edit', edit_organization_upload_path(@organization, upload) %></td>
          <td><%= link_to 'Destroy', [@organization, upload], method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Upload', new_organization_upload_path(@organization) %>
</div>
