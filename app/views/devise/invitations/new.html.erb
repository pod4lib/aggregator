<% content_for :header do %>
  <%= render 'shared/organization_header' %>
<% end %>

<h2><%= t "devise.invitations.new.header" %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: organization_invite_path(@organization), html: { method: :post }) do |f| %>
  <% resource.class.invite_key_fields.each do |field| %>
    <%= f.text_field field %>
  <% end %>

  <div class="actions">
    <%= f.primary t("devise.invitations.new.submit_button") %>
  </div>
<% end %>
